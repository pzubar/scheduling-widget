<article class='w-full bg-white p-4'>
  <p class='text-2xl mb-2'>
    {{@location.name}}
  </p>
  <p class='text-base mb-2'>
    {{@location.street}}
  </p>
  <p class='text-base mb-2'>
    {{join ', ' (compact (array @location.city @location.state @location.zip))}}
  </p>
  <p class='text-base mb-2'>
    {{@location.phone}}
  </p>
  <Ui::Button @class='w-full' @onClick={{(fn @selectLocation @location)}}>
    Select
  </Ui::Button>
</article>