<article class='w-full bg-white p-4'>
  <p class='text-2xl mb-2'>
    {{@location.name}}
  </p>
  <p class='text-lg mb-2'>
    {{concat @location.city ' ' @location.state ' ' @location.zip}}
  </p>
  <p class='text-lg mb-2'>
    {{@location.phone}}
  </p>
  <Ui::Button @class="w-full">
    Select
  </Ui::Button>
</article>